@model UploadFileToDb.FileUploadViewModel.FileUploadViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to File Upload</h1>
    <p>Uploading a file to database </p>
</div>

<div class="col-md-12">
    <form method="post" asp-action="UploadFile" enctype="multipart/form-data">
        <div class="row">
            
            <div class="col-md-6">
                <label asp-for="FileName"></label>
                <input type="file" name="file" class="form-control" accept=".jpg, .png, .jpeg" />
            </div>
            <div class="col-md-6">
                <label asp-for="Description"></label>
                <input type="text" asp-for="Description" class="form-control" />
            </div>
            <div class="col-md-6">
                <input type="submit" class="btn btn-primary mt-2"value="Upload File" />
            </div>
        </div>
    </form>
</div>

<hr />

@if (Model.SystemFiles.Count == 0)
{
    <caption> There is data in the database</caption>
}
else
{
    <table class="table table-striped table-bordered tabletable-hover">
        <thead>
            <tr>
                <th>@Model.Id</th>
                <th>@Model.FileName</th>
                <th>@Model.FileType</th>
                <th>@Model.Extention</th>
                <th>@Model.Description</th>
                <th>@Model.CreatedOn</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var file in Model.SystemFiles)
            {
                <tr>
                    <td>@file.Id</td>
                    <td>@file.FileName</td>
                    <td>@file.FileType</td>
                    <td>@file.Extention</td>
                    <td>@file.Description</td>
                    <td>@file.CreatedOn</td>
                </tr>
            }
        </tbody>
    </table>

}
